{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AKM Scopes Schema",
  "description": "JSON Schema for API Key Management System scopes definition",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "scopes": {
      "type": "array",
      "description": "List of scope definitions",
      "items": {
        "type": "object",
        "properties": {
          "scope_name": {
            "type": "string",
            "description": "Unique scope identifier",
            "pattern": "^[a-z0-9]+:[a-z0-9_]+:[a-z0-9_*]+$",
            "minLength": 3,
            "maxLength": 100
          },
          "description": {
            "type": "string",
            "description": "Human-readable description of the scope",
            "minLength": 1,
            "maxLength": 500
          },
          "category": {
            "type": "string",
            "description": "Scope category for organization",
            "enum": [
              "projects",
              "keys",
              "scopes",
              "webhooks",
              "alerts",
              "usage",
              "admin",
              "system"
            ]
          },
          "is_active": {
            "type": "boolean",
            "description": "Whether the scope is active",
            "default": true
          }
        },
        "required": ["scope_name", "description", "category"],
        "additionalProperties": false
      },
      "minItems": 1
    }
  },
  "required": ["version", "scopes"],
  "additionalProperties": false
}
